#name = "drfbc"
#author = "rebd"

coucou = "salut"

page accueil {
    image("https://tse4.mm.bing.net/th/id/OIP.ROkMXuS5vrwuhw3jgi_6BQHaLH?cb=12&pid=Api&ucfimg=1") {
        radius: 10px;
        center;
        height: 200px
    }
    title("Veuiller vous connecter") {
        var: super;
        center;
    }
    input("Entrer votre ID") {
        var: in;
        center;
    }
    button("Cliquer") {
        var: button;
        center;
        width: 50%;
        base: bottom;

        onClick {
            if (in.value == "coucou") {
                wait(2000) {
                    super.text: "Connect√©";
                    super.color: green;
                }
            } else {
                accueil.hide
            }
        }
    }
}
onKey ("Enter") {
    alert(in.value)
}